@page
@model VanHorn_WebServices_Final.Pages.Days.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Day</h4>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            @Model.Day.Id
        </dd>
    </dl>
    <table class="table">
        <tbody>
            @{
                int optionNum = 1;
            }
            <tr>
                <td>
                    <header>Timeslots</header>
                    @if (Model.Day.Timeslots.Count < 5)
                    {
                        @foreach (var item in Model.Day.Timeslots.Where(t => !t.IsTaken))
                        {
                            <ul>
                                <li><a asp-page="/Timeslots/Edit" asp-route-dayId="@Model.Day.Id" asp-route-id="@item.TId"> @item.StartTime</a></li>
                                @{
                                    optionNum++;
                                }
                            </ul>
                            
                        }
                    }
                    else
                    {
                        <p>Nothing available for today</p>
                    }
                </td>
            </tr>
        </tbody>
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Day.Id">Edit</a> |
</div>
