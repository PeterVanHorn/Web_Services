@page
@model VanHorn_WebServices_Final.Pages.Timeslots.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Timeslot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Timeslot.TId" />
            <div class="form-group">
                <label asp-for="Timeslot.DayId" class="control-label"></label>
                <input asp-for="Timeslot.DayId" class="form-control" />
                <span asp-validation-for="Timeslot.DayId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Timeslot.CustomerId" class="control-label"></label>
                <select asp-for="Timeslot.CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="Timeslot.CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Timeslot.ServiceProviderId" class="control-label"></label>
                <select asp-for="Timeslot.ServiceProviderId" class="form-control" asp-items="ViewBag.ServiceProviderId"></select>
                <span asp-validation-for="Timeslot.ServiceProviderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
