@page
@model VanHorn_WebServices_Final.Pages.Timeslots.CancelModel
@{
    ViewData["Title"] = "Cancel";
}
<h3>Are you sure you want to cancel this appointment?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Timeslot.DayId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Timeslot.DayId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Timeslot.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Timeslot.Customer.CId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Timeslot.ServiceProvider)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Timeslot.ServiceProvider.SPId)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Timeslot.TId" />
        <input type="hidden" asp-for="Timeslot.DayId" />
        <input type="hidden" asp-for="Timeslot.StartTime" />
        <input type="hidden" asp-for="Timeslot.Duration" />
        <input type="hidden" asp-for="Timeslot.CustomerId"/>
        <input type="submit" value="Yes" class="btn btn-primary" /> |
        <a asp-page="/Customers/Details" asp-route-id="@Model.Timeslot.CustomerId">Back</a>
    </form>
</div>
